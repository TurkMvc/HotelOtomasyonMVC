@model IEnumerable<WebApplication1.Models.StatusesModel>

@{
    ViewBag.Title = "Oda Durum Listesi";
}

<h2>Oda Durum Listesi</h2>

<p>
    @Html.ActionLink("Oda Durum Ekle", "RoomStatusInsert")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
     
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <form action="/Rooms/RoomStatusDelete/@item.Id">
                <input type="submit" value="Sil" />
            </form>
        </td>
    </tr>
}

</table>
