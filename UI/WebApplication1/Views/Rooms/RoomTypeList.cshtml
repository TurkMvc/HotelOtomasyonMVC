@model IEnumerable<WebApplication1.Models.RoomTypesModel>

@{
    ViewBag.Title = "Oda Tipi Ekle";
}

<h2>Oda Tipi Listesi</h2>

<p>
    @Html.ActionLink("Oda Tipi Ekle", "RoomTypeInsert")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Quota)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quota)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "RoomTypeEdit", new {id=item.Id}) |
            @Html.ActionLink("Detaylar", "RoomTypeDetails", new { id = item.Id }) |
            <form action="RoomTypeDelete/@item.Id">
                <input type="submit" value="Sil" />
            </form>

        </td>
    </tr>
}

</table>
