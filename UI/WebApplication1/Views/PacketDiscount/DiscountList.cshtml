@model IEnumerable<WebApplication1.Models.DiscountsModel>

@{
    ViewBag.Title = "DiscountList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>İndirim Listesi</h2>

<p>
    @Html.ActionLink("Yeni", "DiscountInsert")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartingDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndingDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr id="Discount@(item.Id)">
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartingDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndingDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "DiscountEdit", new { id = item.Id }) |
            @Html.ActionLink("Detaylar", "DiscountDetails", new { id = item.Id }) |
            <a onclick="DeletePostToAction(@item.Id,'İndirimi Silmek İstediğine Emin Misin?','DiscountDelete','Discount','DiscountList',true,null)" class="btn btn-danger"><i class="fa fa-remove"> </i>Sil</a>
        </td>
    </tr>
}

</table>
