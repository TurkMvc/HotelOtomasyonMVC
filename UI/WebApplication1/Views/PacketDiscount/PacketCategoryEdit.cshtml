@model WebApplication1.Models.PacketsExtraProductCategoriesModel

@{
    ViewBag.Title = "PacketCategoryEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>>Paketteki Kategoriyi Düzenle</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>PacketsExtraProductCategoriesModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.PacketId, "Paket", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PacketId", (IEnumerable<SelectListItem>)ViewBag.Paketler, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PacketId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsActive)
                    @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ExtraProductCategoryId, "Kategori", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ExtraProductCategoryId", (IEnumerable<SelectListItem>)ViewBag.Kategoriler, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ExtraProductCategoryId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-default" disabled="disabled" />
            </div>
        </div>
    </div>
}

