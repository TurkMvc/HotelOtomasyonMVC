@model IEnumerable<WebApplication1.Models.PermitsModel>

@{
    ViewBag.Title = "İzinli Çalışanlar Listesi";
}

<h2>İzinli Çalışanlar Listesi</h2>

<p>
    @Html.ActionLink("İzinli Çalışan Ekle", "PermitInsert")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StartingDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PermitType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StartingDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PermitType.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee.Name)
        </td>
     
        <td>
            @Html.ActionLink("Düzenle", "PermitEdit", new { id = item.Id }) |
            @Html.ActionLink("Detaylar", "PermitDetails", new {id=item.Id }) |
            <form method="post" action="/Employee/PermitDelete/@item.Id">
                <input type="submit"  value="Sil" />
            </form>
        </td>
    </tr>
}

</table>
