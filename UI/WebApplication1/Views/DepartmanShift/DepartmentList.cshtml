@model IEnumerable<WebApplication1.Models.DepartmentsModel>

@{
    ViewBag.Title = "DepartmentList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Departman Listesi</h2>

<p>
    @Html.ActionLink("Yeni", "DepartmentInsert")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr id="Department@(item.Id)">
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "DepartmentEdit", new { id = item.Id }) |
            @Html.ActionLink("Detaylar", "DepartmentDetails", new { id = item.Id }) |
            <a onclick="DeletePostToAction(@item.Id,'Departmanı Silmek İstediğine Emin Misin?','DepartmentDelete','Department','DepartmentList',true,null)" class="btn btn-danger"><i class="fa fa-remove"> </i>Sil</a>
        </td>
    </tr>
}

</table>
