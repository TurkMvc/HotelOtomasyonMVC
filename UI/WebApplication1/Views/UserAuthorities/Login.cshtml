@model bool
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <form action="@Url.Action("Login", "UserAuthorities")" method="post">
            @if (Model)
            {
                <div class="alert alert-danger">
                    Kullanıcı adı ve şifrenizi kontrol edip tekrar deneyiniz.
                </div>
            }
            <div class="form-group">
                <input class="form-control" name="userName" type="text" />
            </div>
            <div class="form-group">
                <input class="form-control" name="password" type="password" />
            </div>
            <div class="form-group">
                <input class="btn btn-success pull-right" type="submit" value="Giriş Yap" />
            </div>
            <div class="clearfix"></div>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>
