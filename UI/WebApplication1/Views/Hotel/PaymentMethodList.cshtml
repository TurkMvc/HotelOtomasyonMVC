@model IEnumerable<WebApplication1.Models.PaymentMethodsModel>

@{
    ViewBag.Title = "PaymentMethodList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ödeme Yöntemleri</h2>

<p>
    @Html.ActionLink("Yeni", "PaymentMethodInsert")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr id="PaymentMethod@(item.Id)">
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "PaymentMethodEdit", new { id = item.Id }) |
            @Html.ActionLink("Detaylar", "PaymentMethodDetails", new { id = item.Id }) |
            <a onclick="DeletePostToAction(@item.Id,'Ödeme Yöntemini İstediğine Emin Misin?','PaymentMethodDelete','PaymentMethod','PaymentMethodList',true,null)" class="btn btn-danger"><i class="fa fa-remove"> </i>Sil</a>
        </td>
    </tr>
}

</table>
