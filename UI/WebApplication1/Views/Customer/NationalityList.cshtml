@model IEnumerable<WebApplication1.Models.NationalitiesModel>

@{
    ViewBag.Title = "Uyruklar";
}

<h2>Uyruklar</h2>

<p>
    <a href="@Url.Action("NationalityInsert")" class="btn btn-primary"> <i class="fa fa-flag"> Yeni</i> </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CountryName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr id="Nationality@(item.Id)">
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CountryName)
        </td>
        <td>
            <a href="@Url.Action("NationalityEdit", new { id = item.Id })" class="btn btn-warning"> <i class="fa fa-search-plus"> Düzenle</i> </a>
            <a onclick="DeletePostToAction(@item.Id,'Uyruğu Silmek İstediğine Emin Misin?','@Url.Action("NationalityDelete", "Customer")','NationalityError',null,false,'Nationality')" class="btn btn-danger"><i class="fa fa-remove"> </i>Sil</a>
        </td>
    </tr>
}
    <tr>
        <td colspan="3">
            <div class="alert alert-danger" role="alert" style="visibility: hidden" id="NationalityError">
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                <span class="sr-only">Error:</span>
                HATA yada böyle bir uyruğa sahip müşteri bulunmaktadır !
            </div>
        </td>
    </tr>
</table>
